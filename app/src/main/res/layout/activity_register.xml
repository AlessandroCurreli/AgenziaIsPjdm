<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.curdrome.agenziaispjdm.login.RegisterActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_warnings"
        android:layout_alignStart="@+id/email_text"
        android:layout_above="@+id/email_text"
        android:layout_alignTop="@+id/email_text"
        android:layout_marginTop="0dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_text"
        android:text="Email Address"
        android:textColor="#ff686668"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="#ff686668"
        android:ems="10"
        android:id="@+id/name_text"
        android:layout_below="@+id/email_text"
        android:layout_alignStart="@+id/email_text"
        android:layout_alignEnd="@+id/email_text"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Surname"
        android:textColor="#ff686668"
        android:ems="10"
        android:id="@+id/surname_text"
        android:layout_below="@+id/name_text"
        android:layout_alignStart="@+id/email_text"
        android:layout_alignEnd="@+id/email_text"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_text"
        android:text="Telefono"
        android:textColor="#ff686668"
        android:layout_below="@+id/surname_text"
        android:layout_alignStart="@+id/email_text"
        android:layout_alignEnd="@+id/email_text" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_text"
        android:layout_below="@+id/phone_text"
        android:layout_alignStart="@+id/email_text"
        android:layout_alignEnd="@+id/email_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrati"
        android:textColor="#000000"
        android:id="@+id/register_button"
        android:layout_below="@+id/password_text"
        android:layout_alignStart="@+id/password_text" />

</RelativeLayout>
