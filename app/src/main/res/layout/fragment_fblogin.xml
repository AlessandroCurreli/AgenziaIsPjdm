<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.curdrome.agenziaispjdm.login.FragmentFBLogin">

    <TextView
        android:id="@+id/tv_name_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="75dp"
        android:text=""
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_email_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="100dp"
        android:text=""
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_message_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="125dp"
        android:text="@string/tv_message_fb"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/pwd_fb_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#ff686668" />

    <Button
        android:id="@+id/button_login_fb"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd_text"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="175dp"
        android:text="@string/login_button_fb"
        android:textColor="#000000" />

</FrameLayout>
