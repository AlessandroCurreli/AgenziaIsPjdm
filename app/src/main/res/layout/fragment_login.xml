<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.curdrome.agenziaispjdm.login.FragmentLogin">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_warnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="@string/tv_warnings"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#D50000" />

    <EditText
        android:id="@+id/email_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#ff686668" />
    <!--android:layout_marginTop="100dp"
        android:layout_gravity="top|center_horizontal"
    -->

    <EditText
        android:id="@+id/pwd_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="135dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#ff686668" />
    <!--android:layout_marginTop="175dp"
        android:layout_gravity="center_horizontal"
     />-->

    <Button
        android:id="@+id/button_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd_text"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="175dp"
        android:text="@string/login_button"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="230dp"
        android:text="@string/tv_message"
        android:textColor="#000000" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_message"
        android:layout_below="@+id/tv_message"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="250dp"
        android:text="@string/register_button"
        android:textColor="#000000" />
        <!-- android:layout_gravity="center" -->

</FrameLayout>
