<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.curdrome.agenziaispjdm.main.ProfileFragment">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:text="E-mail:"
        android:textColor="#ff686668" />

    <EditText
        android:id="@+id/email_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#ff686668" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:text="Nome:"
        android:textColor="#ff686668" />

    <EditText
        android:id="@+id/name_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/surname_text"
        android:layout_alignEnd="@+id/email_text"
        android:layout_alignStart="@+id/email_text"
        android:layout_below="@+id/email_text"
        android:layout_gravity="top|center"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#ff686668" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:text="Surname:"
        android:textColor="#ff686668" />

    <EditText
        android:id="@+id/surname_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phone_text"
        android:layout_alignEnd="@+id/email_text"
        android:layout_alignStart="@+id/email_text"
        android:layout_below="@+id/name_text"
        android:layout_gravity="top|center"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#ff686668" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:text="Telefono:"
        android:textColor="#ff686668" />

    <EditText
        android:id="@+id/phone_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_text"
        android:layout_alignEnd="@+id/email_text"
        android:layout_alignStart="@+id/email_text"
        android:layout_below="@+id/surname_text"
        android:layout_gravity="top|center"
        android:layout_marginTop="210dp"
        android:ems="10"
        android:inputType="phone"
        android:textColor="#ff686668" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:text="Password:"
        android:textColor="#ff686668" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center"
        android:layout_marginTop="260dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#ff686668" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:text="New password:"
        android:textColor="#ff686668" />

    <EditText
        android:id="@+id/new_password_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center"
        android:layout_marginTop="310dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#ff686668" />

    <Button
        android:id="@+id/apply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applica modifiche" />

</FrameLayout>
