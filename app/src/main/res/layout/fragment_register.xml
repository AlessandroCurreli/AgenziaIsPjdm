<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.curdrome.agenziaispjdm.login.RegisterFragment">




    <EditText
        android:id="@+id/email_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#ff686668" />

    <EditText
        android:id="@+id/name_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/surname_text"
        android:layout_alignEnd="@+id/email_text"
        android:layout_alignStart="@+id/email_text"
        android:layout_below="@+id/email_text"
        android:layout_gravity="top|center"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#ff686668" />

    <EditText
        android:id="@+id/surname_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phone_text"
        android:layout_alignEnd="@+id/email_text"
        android:layout_alignStart="@+id/email_text"
        android:layout_below="@+id/name_text"
        android:layout_gravity="top|center"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="Surname"
        android:inputType="textPersonName"
        android:textColor="#ff686668" />

    <EditText
        android:id="@+id/phone_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_text"
        android:layout_alignEnd="@+id/email_text"
        android:layout_alignStart="@+id/email_text"
        android:layout_below="@+id/surname_text"
        android:layout_gravity="top|center"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="phone"
        android:textColor="#ff686668" />

    <EditText
        android:id="@+id/pwd_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#ff686668" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_text"
        android:layout_alignStart="@+id/password_text"
        android:layout_below="@+id/password_text"
        android:layout_gravity="top|center"
        android:layout_marginTop="260dp"
        android:text="Registrati"
        android:textColor="#000000" />

</FrameLayout>