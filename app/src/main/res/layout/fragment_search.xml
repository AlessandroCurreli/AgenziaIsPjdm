<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.curdrome.agenziaispjdm.research.SearchFragment">

    <TextView
        android:layout_height="wrap_content"
        android:text="@string/select_type"
        android:layout_gravity="start"
        android:textColor="#3d5afe"
        android:id="@+id/select_type"
        android:layout_width="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"

        android:layout_below="@+id/idProperty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_msg"
        android:id="@+id/textView2"
        android:textColor="#3d5afe"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/idBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idprezzo1"
        android:id="@+id/idprezzo1"
        android:checked="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="select_item"
        android:textColor="#000000"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idPrezzo2"
        android:id="@+id/idPrezzo2"
        android:checked="false"
        android:onClick="select_item"
        android:textColor="#000000"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idPrezzo3"
        android:checked="false"
        android:layout_below="@+id/idprezzo1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="select_item"
        android:textColor="#000000"
        android:text="@string/idPrezzo3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#3d5afe"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="@string/textView3"
        android:layout_alignRight="@+id/idprezzo1"
        android:layout_alignEnd="@+id/idprezzo1"
        android:layout_below="@+id/idPrezzo3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idMq3"
        android:id="@+id/idMq3"
        android:checked="false"
        android:onClick="select_item"
        android:layout_below="@+id/idMq1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idMyProperties"
        android:id="@+id/idProperty"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:clickable="false"
        android:layout_below="@+id/select_type"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idBox"
        android:id="@+id/idBox"
        android:layout_alignTop="@+id/idTerreno"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idTerreno"
        android:id="@+id/idTerreno"
        android:layout_below="@+id/spinner1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_button_search"
        android:id="@+id/lardo_merdoso"
        android:onClick="finalSelection"
        android:textColor="#e82706"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|bottom" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idMq2"
        android:id="@+id/idMq2"
        android:checked="false"
        android:layout_alignTop="@+id/idMq1"
        android:layout_toRightOf="@+id/select_type"
        android:layout_toEndOf="@+id/select_type"
        android:layout_gravity="left|bottom" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idMq4"
        android:id="@+id/idMq4"
        android:layout_below="@+id/idMq2"
        android:layout_alignRight="@+id/idMq2"
        android:layout_alignEnd="@+id/idMq2"
        android:checked="false"
        android:layout_alignLeft="@+id/idMq2"
        android:layout_alignStart="@+id/idMq2"
        android:layout_gravity="left|bottom" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idMq1"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:checked="false"
        android:text="@string/idMq1"
        android:layout_gravity="left|center_vertical" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_below="@+id/select_type"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="#000000"
        android:spinnerMode="dropdown"
        android:layout_gravity="center_horizontal|top" />

</RelativeLayout>
